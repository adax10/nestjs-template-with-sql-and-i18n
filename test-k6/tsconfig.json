{
  "compilerOptions": {
    "target": "ESNext",
    "allowImportingTsExtensions": true, // k6 doesn't support Node.js module resolution: https://grafana.com/docs/k6/latest/using-k6/modules/#local-modules
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "lib/*": ["../src/lib/*"],
      "modules/*": ["../src/modules/*"]
    }
  }
}
