{
  "name": "api-starter",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "update": "yarn upgrade-interactive --latest",
    "lint": "eslint \"{src,test-k6}/**/*.ts\"",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:k6": "test-k6/run-tests.sh",
    "prepare": "husky",
    "precommit": "yarn build && yarn test && yarn lint",
    "format": "yarn prettier -w ./src ./test-k6",
    "format:check": "yarn prettier --check ./src ./test-k6",
    "docker-build": "docker build --build-arg NODE_VERSION=$(cat .nvmrc | sed 's/v//') -t api-starter .",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "migration:create": "npm run typeorm -- migration:create src/database/migrations/$npm_config_name",
    "migration:generate": "npm run typeorm -- -d src/database/typeorm.data-source.ts migration:generate src/database/migrations/$npm_config_name",
    "migration:run": "yarn typeorm -d src/database/typeorm.data-source.ts migration:run",
    "migration:revert": "yarn typeorm -d src/database/typeorm.data-source.ts migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "11.0.12",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.0.12",
    "@nestjs/platform-express": "11.0.12",
    "@nestjs/swagger": "11.1.0",
    "@nestjs/terminus": "11.0.0",
    "@nestjs/typeorm": "11.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "date-fns": "4.1.0",
    "helmet": "8.1.0",
    "morgan": "1.10.0",
    "mysql2": "3.14.0",
    "nestjs-i18n": "10.5.1",
    "ramda": "0.30.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "typeorm": "0.3.21"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@nestjs/cli": "11.0.5",
    "@nestjs/schematics": "11.0.2",
    "@nestjs/testing": "11.0.11",
    "@stylistic/eslint-plugin-ts": "4.2.0",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/k6": "0.57.1",
    "@types/morgan": "1.9.9",
    "@types/node": "22.13.10",
    "@types/ramda": "0.30.2",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "8.26.1",
    "@typescript-eslint/parser": "8.26.1",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "eslint": "9.22.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-functional": "9.0.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-nested-if": "1.0.0",
    "eslint-plugin-no-else": "0.2.2",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-prettier": "5.2.3",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "prettier": "3.5.3",
    "rimraf": "6.0.1",
    "supertest": "7.0.0",
    "ts-jest": "29.2.6",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.8.2",
    "typescript-eslint": "8.26.1",
    "wait-on": "8.0.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
