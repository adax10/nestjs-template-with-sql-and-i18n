{
    "name": "api-starter",
    "version": "1.0.0",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "upd": "yarn upgrade-interactive --latest",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "prepare": "husky",
        "precommit": "yarn build && yarn test && yarn lint",
        "format": "yarn prettier -w ./src",
        "format:check": "yarn prettier --check ./src",
        "docker-build": "docker build --build-arg NODE_VERSION=$(cat .nvmrc | sed 's/v//') -t api-starter .",
        "typeorm": "ts-node ./node_modules/typeorm/cli",
        "migration:create": "npm run typeorm -- migration:create src/database/migrations/$npm_config_name",
        "migration:generate": "npm run typeorm -- -d src/database/typeorm.data-source.ts migration:generate src/database/migrations/$npm_config_name",
        "migration:run": "yarn typeorm -d src/database/typeorm.data-source.ts migration:run",
        "migration:revert": "yarn typeorm -d src/database/typeorm.data-source.ts migration:revert"
    },
    "dependencies": {
        "@nestjs/common": "10.4.1",
        "@nestjs/config": "3.2.3",
        "@nestjs/core": "10.4.15",
        "@nestjs/platform-express": "10.4.15",
        "@nestjs/swagger": "8.1.0",
        "@nestjs/terminus": "10.3.0",
        "@nestjs/throttler": "5.2.0",
        "@nestjs/typeorm": "10.0.2",
        "class-transformer": "0.5.1",
        "class-validator": "0.14.1",
        "date-fns": "4.1.0",
        "helmet": "8.0.0",
        "morgan": "1.10.0",
        "mysql2": "3.12.0",
        "nestjs-i18n": "10.5.0",
        "ramda": "0.30.1",
        "reflect-metadata": "0.2.2",
        "rxjs": "7.8.1",
        "typeorm": "0.3.20"
    },
    "devDependencies": {
        "@commitlint/cli": "19.7.1",
        "@commitlint/config-conventional": "19.7.1",
        "@nestjs/cli": "11.0.2",
        "@nestjs/schematics": "11.0.0",
        "@nestjs/testing": "11.0.8",
        "@types/express": "5.0.0",
        "@types/jest": "29.5.14",
        "@types/morgan": "1.9.9",
        "@types/node": "22.13.1",
        "@types/ramda": "0.30.2",
        "@types/supertest": "6.0.2",
        "@typescript-eslint/eslint-plugin": "8.23.0",
        "@typescript-eslint/parser": "8.23.0",
        "conventional-changelog-conventionalcommits": "8.0.0",
        "eslint": "8.57.0",
        "eslint-config-prettier": "10.0.1",
        "eslint-plugin-prettier": "5.2.3",
        "husky": "9.1.7",
        "jest": "29.7.0",
        "prettier": "3.5.0",
        "rimraf": "6.0.1",
        "supertest": "7.0.0",
        "ts-jest": "29.2.5",
        "ts-loader": "9.5.2",
        "ts-node": "10.9.2",
        "tsconfig-paths": "4.2.0",
        "typescript": "5.7.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
